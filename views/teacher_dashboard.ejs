<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>
    <link rel="stylesheet" href="/teacher-dashboard.css"> <!-- Link to external CSS -->
</head>
<body>
    <div class="container">
        <h1 class="page-title">Welcome, Teacher!</h1>
        <h2 class="section-title">Your Quizzes and Students' Scores</h2>

        <% quizScores.forEach(({ quiz, latestScores }) => { %>
            <div class="quiz-section">
                <h3 class="quiz-title">
                    <%= quiz.title %>
                    <form action="/teacher/delete-quiz/<%= quiz.id %>" method="POST" class="delete-form">
                        <button type="submit" class="btn-secondary" onclick="return confirm('Are you sure you want to delete this quiz?');">Delete</button>
                    </form>
                </h3>
                <ul class="score-list">
                    <% latestScores.forEach(({ student, score, attempt_number }) => { %>
                        <li class="score-item">
                            <strong><%= student.fullname %></strong> - 
                            <% if (score !== null) { %>
                                <span class="score">Score: <%= score %> (Attempt <%= attempt_number %>)</span>
                            <% } else { %>
                                <span class="not-attempted">Not Attempted</span>
                            <% } %>
                        </li>
                    <% }) %>
                </ul>
            </div>
        <% }) %>

        <div class="navigation">
            <a href="/teacher/add-quiz" class="btn-primary">Add Quiz</a>
            <a href="/logout" class="btn-secondary">Logout</a>
        </div>
    </div>
</body>
</html>
